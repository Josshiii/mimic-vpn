{
  "productName": "mimic-app",
  "version": "1.0.0",
  "identifier": "com.mimic.vpn",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Mimic Hub",
        "width": 900,
        "height": 600,
        "resizable": false,
        "maximizable": false,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["nsis"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "wintun.dll"
    ],
    "deepLinkProtocols": [
      {
        "schemes": ["mimic"],
        "name": "Mimic Hub Protocol"
      }
    ]
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://gist.githubusercontent.com/TuUsuario/TuGistID/raw/updates.json"
      ],
      "dialog": false,
      "pubkey": "PON_AQUI_TU_CLAVE_PUBLICA_CUANDO_LA_TENGAS"
    }
  }
}
